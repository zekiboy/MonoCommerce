@model IEnumerable<MonoCommerce.WebUI.Models.CargoCompanyViewModel>

@{
    ViewData["Title"] = "Kargo Firmaları Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2>Kargo Firmaları Yönetimi</h2>
            <p class="text-muted">Kargo firmalarını bu ekrandan yönetebilirsiniz.</p>
        </div>
        <div>
            <a asp-controller="CargoCompany" asp-action="Create" class="btn btn-outline-secondary">Kargo Firması Ekle</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped" id="cargoCompaniesTable">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Adı</th>
                    <th>Açıklama</th>
                    <th>Ağırlık Türü</th>
                    <th>API Türü</th>
                    <th>Durum</th>
                    <th>Detay</th>
                    <th>Düzenle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.WeightType</td>
                            <td>@item.ApiType</td>
                            <td>@(item.IsActive ? "Aktif" : "Pasif")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detay</a>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Düzenle</a>
                            </td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" 
                                      onsubmit="return confirm('Bu kargo firmasını silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">Henüz kayıtlı kargo firması yok</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#cargoCompaniesTable').DataTable();
        });
    </script>
}