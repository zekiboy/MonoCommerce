@model MonoCommerce.WebUI.Models.OrderViewModel

@{
    ViewData["Title"] = "Yeni Sipariş Ekle";
}

<h1>Yeni Sipariş Ekle</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="CustomerName" class="form-label">Müşteri Adı</label>
            <input asp-for="CustomerName" class="form-control" />
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="CustomerPhone" class="form-label">Telefon</label>
            <input asp-for="CustomerPhone" class="form-control" />
            <span asp-validation-for="CustomerPhone" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="CustomerEmail" class="form-label">E-posta</label>
            <input asp-for="CustomerEmail" class="form-control" />
            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="City" class="form-label">Şehir</label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label">Adres</label>
        <textarea asp-for="Address" class="form-control"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="SiteId" class="form-label">Site</label>
            <select asp-for="SiteId" class="form-select" asp-items="ViewBag.Sites">
                <option value="">-- Site Seç --</option>
            </select>
            <span asp-validation-for="SiteId" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Quantity" class="form-label">Adet</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="UnitPrice" class="form-label">Birim Fiyat</label>
            <input asp-for="UnitPrice" class="form-control" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="Status" class="form-label">Sipariş Durumu</label>
            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<MonoCommerce.Entities.OrderStatus>()">
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="col-md-4 d-flex align-items-center mt-2">
            <div class="form-check">
                <input asp-for="IsConfirmedByPhone" class="form-check-input" id="IsConfirmedByPhone" />
                <label class="form-check-label" for="IsConfirmedByPhone">Telefonla Onaylandı</label>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}